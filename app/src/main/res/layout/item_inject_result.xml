<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#12161C"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <!-- 高危标记条 -->
    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#E53935" />

    <!-- 内容区 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 调用方 -->
        <TextView
            android:id="@+id/tvCaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caller: Lcom/app/MainActivity;"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- 被调用方 -->
        <TextView
            android:id="@+id/tvTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Target: Lcom/xxxx/RandomClass;"
            android:textColor="#FF8A80"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- smali -->
        <TextView
            android:id="@+id/tvSmali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="invoke-static {...}"
            android:textColor="#B0BEC5"
            android:textSize="12sp"
            android:typeface="monospace"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>
